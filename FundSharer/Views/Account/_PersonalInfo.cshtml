@{
    var FirstName = ViewBag.FirstName;
    var LastName = ViewBag.LastName;
    var EmailAddress = ViewBag.EmailAddress;
    var PhoneNumber = ViewBag.PhoneNumber;
}
<dl class="text-info">
    <dt>@Html.Label("First Name")</dt>
    <dd><div id="uFName">@Html.DisplayTextFor(m => FirstName)</div></dd>
    <dt>@Html.Label("Last Name")</dt>
    <dd><div id="uLName">@Html.DisplayTextFor(m => LastName)</div></dd>
    <dt>@Html.Label("Email Address")</dt>
    <dd><div id="uEmail">@Html.DisplayTextFor(m => EmailAddress)</div></dd>
    <dt>@Html.Label("Phone Number")</dt>
    <dd><div id="uPhone">@Html.DisplayTextFor(m => PhoneNumber)</div></dd>
</dl>
<hr />
<div id="aEdit"><a href="" id="uEditLink" onclick="RenderEdit(uEditLink)"><i class="fa fa-edit" />Edit</a></div>
<div>@Html.ActionLink("Change Password", "ResetPassword", "Account")</div>

