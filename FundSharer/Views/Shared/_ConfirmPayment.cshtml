@using FundSharer.Models
@model PaymentDetails

<div class="form-inline">
        <div class="row">
            <div class="center-block">
                <dl class="dl-horizontal h4">
                    <dt>@Html.DisplayNameFor(m => Model.Date)</dt>
                    <dd>@Html.DisplayTextFor(m => Model.Date)</dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class=center-block>
                @{
                    var base64 = Convert.ToBase64String(Model.POPimage, 0, Model.POPimage.Length);
        var imgsrc = String.Format("data:image/jpg;base64,{0}", base64);
    }
                <div class="img-responsive"><img src='@imgsrc' class="img-responsive media-middle" style="border:2px ridge blue;padding:2px 2px" /></div>
            </div>
        </div>
    <hr/>
        <div class="row">
            <div class="col-sm-3">
                @{ var Payid = Model.PaymentId;}
                <button type="button" data-PayId='@Payid' id="confirmpayment" class="btn btn-success btn-block">Confirm</button>
            </div>
            <div class="col-sm-3">
                <button type="reset" class="btn btn-danger btn-block cancelconfirm">Cancel</button>
            </div>
            @*<div class="col-md-2">
                <div><i class="fa fa-warning fa-4x"></i>@Html.ActionLink("Report an issue", "Report", "Manage", new { Id = Model.PaymentId })</div>
            </div>*@
        </div>
</div>