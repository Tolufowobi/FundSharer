@model List<Dictionary<string, object>>

<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Account Number</th>
            <th>Bank Name</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @{
                        if (Model.Count() > 0)
                        {
                            var counter = 1;
                            foreach (Dictionary<String, object> i in Model)
                            {
                                var Name = i["Name"];
                                var AccountNumber = i["AccountNumber"];
                                var BankName = i["BankName"];
                                var PaymentId = i["PaymentId"];
                                var Confirmed = i["Confirmed"];
                    <tr>
                        <td>@Name</td>
                        <td>@AccountNumber</td>
                        <td>@BankName</td>
                        @if (PaymentId != null)
                                    {
                                    if ((bool)Confirmed == true)
                                    {
                                <td><div class="alert alert-success">Confirmed</div></td>
                            }
                            else
                            {  
                                <td><button type="button" id="@PaymentId" class="btn btn-success btn-sm confirm center-block">Confirm Payment</button></td>  
                            }
                        }
                        else
                        {
                            <td><div class="alert alert-warning">Payment Pending</div></td>
                        }
                    </tr>
                    counter += 1;
                }
            }
            else
            {
                <tr><td>-</td><td>-</td><td>-</td><td>-</td></tr>
            }
        }
    </tbody>
</table>